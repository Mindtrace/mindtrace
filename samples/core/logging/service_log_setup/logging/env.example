# Copy this file to .env and adjust values as needed

# Host directories for log ingestion
MINDTRACE_LOGGER__USE_STRUCTLOG=True
MINDTRACE_LOGGER_DIR=${HOME}/.cache/mindtrace/logs
MINDTRACE_LOGGER_STRUCTLOG_DIR=${HOME}/.cache/mindtrace/structlogs
MINDTRACE_PROMTAIL_POSITIONS_DIR=${HOME}/.cache/mindtrace/promtail-positions

# Grafana admin credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Exposed ports on host
GRAFANA_PORT=3000
LOKI_PORT=3100
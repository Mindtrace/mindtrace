# Horizon Service Environment Configuration
# Copy this file to .env and customize as needed

# =============================================================================
# Horizon Service Configuration
# =============================================================================

# Service port (external)
HORIZON_PORT=8080

# MongoDB database name
HORIZON_MONGO_DB=horizon

# Authentication settings
# Set to 'true' to enable Bearer token authentication
HORIZON_AUTH_ENABLED=false

# Secret key for token validation (required if AUTH_ENABLED=true)
# Generate a secure key: python -c "import secrets; print(secrets.token_hex(32))"
HORIZON_AUTH_SECRET_KEY=

# Logging level: DEBUG, INFO, WARNING, ERROR
HORIZON_LOG_LEVEL=INFO

# Enable debug mode (more verbose logging)
HORIZON_DEBUG=false

# =============================================================================
# MongoDB Configuration
# =============================================================================

# MongoDB port (external)
MONGO_PORT=27017

# Uncomment these for production with authentication:
# MONGO_ROOT_USER=admin
# MONGO_ROOT_PASSWORD=secure-password-here

# =============================================================================
# MongoDB Express (Debug UI)
# =============================================================================

# Only used when running with --profile debug
MONGO_EXPRESS_PORT=8081
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASSWORD=admin

# =============================================================================
# Usage Examples
# =============================================================================
#
# Start the service:
#   docker compose up -d
#
# Start with MongoDB Express UI (for debugging):
#   docker compose --profile debug up -d
#
# View logs:
#   docker compose logs -f horizon
#
# Stop everything:
#   docker compose down
#
# Stop and remove volumes (WARNING: deletes data):
#   docker compose down -v
#
# =============================================================================

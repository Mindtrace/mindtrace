# =============================================================================
# Mindtrace Stereo Camera Service - Environment Configuration
# =============================================================================

# Service
STEREO_CAMERA_API_HOST=0.0.0.0
STEREO_CAMERA_API_PORT=8004
LOG_LEVEL=INFO

# Stereo Camera Settings
MINDTRACE_HW_STEREO_BASELINE_MM=120.0
MINDTRACE_HW_STEREO_FOCAL_LENGTH_PX=1000.0
MINDTRACE_HW_STEREO_TIMEOUT=10

# Disparity Settings
MINDTRACE_HW_STEREO_MIN_DISPARITY=0
MINDTRACE_HW_STEREO_MAX_DISPARITY=128
MINDTRACE_HW_STEREO_BLOCK_SIZE=5

# Network (GigE cameras)
MINDTRACE_HW_NETWORK_JUMBO_FRAMES_ENABLED=true
MINDTRACE_HW_NETWORK_MULTICAST_ENABLED=true

# Paths
MINDTRACE_HW_PATHS_LOG_DIR=/app/logs
MINDTRACE_HW_PATHS_CONFIG_DIR=/app/config
MINDTRACE_HW_PATHS_CACHE_DIR=/app/data
MINDTRACE_HW_PATHS_CALIBRATION_DIR=/app/calibration
